<%= simple_form_for([@board_game, @borrowing]) do |f| %>
  <div class="form-group">
    <%= f.input :start_date, as: :string, input_html: { type: 'datetime-local' }, label: "Date de dÃ©but" %>
  </div>

  <div class="form-group">
    <%= f.input :end_date, as: :string, input_html: { type: 'datetime-local' }, label: "Date de fin" %>
  </div>

  <div class="form-group">
    <p>Utilisateur : <%= @borrowing.game.user.pseudo %></p>
    <%= f.input :user_id, as: :hidden, input_html: { value: @borrowing.game.user.id } %>
  </div>

  <div class="form-group">
    <p>Jeu : <%= @borrowing.game.board_game.name %></p>
    <%= f.association :game, as: :hidden, input_html: { value: @borrowing.game.id } %>
  </div>

  <div class="form-actions">
    <%= f.submit "Enregistrer", class: "btn btn-primary" %>
  </div>
<% end %>